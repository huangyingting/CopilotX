{
    "inputs": [
        {
            "type": "promptString",
            "id": "apim-key",
            "description": "APIM Subscription Key",
            "password": true
        }
    ],
    "servers": {
        "azure-mcp": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@azure/mcp@latest",
                "server",
                "start"
            ]
        },
        "apim-petstore": {
            "url": "https://icsuapim.azure-api.net/petstore-mcp/sse",
            "headers": {
                "Ocp-Apim-Subscription-Key": "${input:apim-key}"
            },
        },
        "github": {
            "type": "http",
            "url": "https://api.githubcopilot.com/mcp/"
        }
    }
}